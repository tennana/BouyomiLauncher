{
  "manifest_version": 3,
  "name": "__MSG_app_name__",
  "description": "__MSG_app_description__",
  "version": "1.3.8",
  "default_locale": "en",
  "homepage_url": "https://github.com/GenbuHase/BouyomiLauncher",
  "minimum_chrome_version": "116",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "*://*.youtube.com/live_chat*",
    "*://studio.youtube.com/channel/*/livestreaming*",
    "*://studio.youtube.com/video/*/livestreaming",
    "*://twitcasting.tv/*/broadcaster*",
    "https://ccfolia.com/rooms/*"
  ],
  "background": {
    "service_worker": "scripts/back/service-worker.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/libs/variables.js",
        "scripts/libs/Initialize.js",
        "scripts/libs/ChromeStorage.js",
        "scripts/libs/Bouyomi.js",
        "scripts/content/index.js"
      ],
      "matches": [
        "*://*.youtube.com/live_chat*",
        "*://studio.youtube.com/channel/*/livestreaming*",
        "*://studio.youtube.com/video/*/livestreaming",
        "*://twitcasting.tv/*/broadcaster*",
        "https://ccfolia.com/rooms/*"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "js": [
        "scripts/content/services/YouTube.js"
      ],
      "matches": [
        "*://*.youtube.com/live_chat*",
        "*://studio.youtube.com/channel/*/livestreaming*",
        "*://studio.youtube.com/video/*/livestreaming"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "js": [
        "scripts/content/services/TwitCasting.js"
      ],
      "matches": [
        "*://twitcasting.tv/*/broadcaster*"
      ]
    },
    {
      "js": [
        "scripts/content/services/Ccfolia.js"
      ],
      "matches": [
        "https://ccfolia.com/rooms/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "__MSG_app_name__",
    "default_popup": "views/Config/index.html"
  },
  "options_ui": {
    "page": "views/Config/index.html",
    "open_in_tab": false
  }
}

